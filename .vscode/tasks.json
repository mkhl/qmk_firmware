{
	"version": "2.0.0",
	"tasks": [
        {
            "label": "sync with upstream",
            "command": "git",
            "args": [
                "pull",
                "upstream",
                "master",
            ],
            "problemMatcher": [],
        },
        {
            "label": "cleanup build artifacts",
            "command": "qmk",
            "args": [
                "clean"
            ],
            "problemMatcher": [],
        },
        {
            "label": "build default keymap",
            "command": "qmk",
            "args": [
                "compile"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "lint default keymap",
            "command": "qmk",
            "args": [
                "lint"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "flash default keymap",
            "command": "qmk",
            "args": [
                "flash"
            ],
            "problemMatcher": [],
        },
    ]
}
